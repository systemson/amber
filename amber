#!/usr/bin/env php
<?php

require __DIR__.'/vendor/autoload.php';

/**
 * Load the application.
 */

$amber = require APP_DIR . '/app/kernel.php';

use Amber\Framework\Commands\CommandsCollection;
use Symfony\Component\Console\Application;
use Symfony\Component\Console\ConsoleEvents;


$application = new Application();
$application->add(new Amber\Framework\Commands\MigrationCommand());
$application->add(new Amber\Framework\Commands\AppCacheCommand());

$application->run();
