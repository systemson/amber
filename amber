#!/usr/bin/env php
<?php

define('INIT_TIME', microtime(true));

require __DIR__.'/vendor/autoload.php';


use Amber\Framework\Container\Facades\CommandsCollection;
use Symfony\Component\Console\Application;
use Symfony\Component\Console\ConsoleEvents;

/**
 * Load the application.
 */
$amber = require APP_DIR . '/app/kernel.php';


$application = new Application();
$application->add(new Amber\Framework\Commands\MigrateUpCommand());
$application->add(new Amber\Framework\Commands\MigrateDownCommand());
$application->add(new Amber\Framework\Commands\MigrateSeedsCommand());
$application->add(new Amber\Framework\Commands\MigrateRestartCommand());
$application->add(new Amber\Framework\Commands\AppCacheCommand());
$application->add(new Amber\Framework\Commands\ServerCommand());

$application->run();
