        },
        {
            "type": "vcs",
            "url": "https://github.com/systemson/gemstone"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.0",
        "amber/cache": "dev-master",
        "amber/common": "dev-master",
        "amber/container": "dev-master",
        "amber/controller": "dev-master",
        "amber/gemstone": "dev-master"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^2.0",
        "phpunit/phpunit": "^6.5|^7.0"
    },
    "scripts": {
        "test": "phpunit --verbose --coverage-html ./tmp/coverage/",
        "docs": "phpdoc -d './vendor/amber/*/src' -i Tests/ -t ./tmp/docs/api"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
