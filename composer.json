{
    "name": "amber/amber",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi Pe√±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Amber\\": "framework"
        },
        "classmap": [
            "database/migrations",
            "database/seeds"
        ],
        "files": [
            "framework/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3.0",
        "amber/collection": "0.6.*",
        "amber/common": "dev-master",
        "amber/container": "^1.1@beta",
        "amber/http-kernel": "^0.1.0@dev",
        "amber/phraser": "^0.1.0@dev",
        "amber/sketch": "dev-master",
        "amber/validator": "^0.1.0@dev",
        "aura/sql": "^3.0",
        "aura/sqlquery": "^2.7",
        "aura/sqlschema": "^2.0",
        "defuse/php-encryption": "^2.2",
        "filp/whoops": "^2.5",
        "firebase/php-jwt": "^5.0",
        "illuminate/database": "^5.8",
        "monolog/monolog": "^1.24",
        "psr/event-dispatcher": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "sunrise/stream": "^1.0",
        "symfony/cache": "^4.2",
        "symfony/console": "^4.2",
        "symfony/inflector": "^4.3",
        "symfony/process": "^4.2",
        "symfony/psr-http-message-bridge": "^1.3",
        "symfony/routing": "^4.2",
        "symfony/serializer": "^5.0",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.9",
        "guzzlehttp/guzzle": "^6.5",
        "php-coveralls/php-coveralls": "^2.1",
        "symfony/var-dumper": "^4.2"
    },
    "scripts": {
        "sniff": "phpcs --standard=PSR12 ./app ./framework ./config",
        "fix-cs": "phpcbf --standard=PSR12 ./app ./framework ./config",
        "test": "phpunit",
        "restart": [
            "composer install",
            "@php amber migrate:restart"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
