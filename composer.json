{
    "name": "amber/amber",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi Pe√±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Amber\\Framework\\": "framework"
        },
        "classmap": [
            "database/migrations",
            "database/seeds"
        ],
        "files": [
            "config/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2.0",
        "amber/cache": "^1.0@beta",
        "amber/common": "dev-master",
        "amber/container": "^1.0.2",
        "amber/sketch": "dev-master",
        "illuminate/database": "^5.8",
        "monolog/monolog": "^1.24",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "sunrise/stream": "^1.0",
        "symfony/cache": "^4.2",
        "symfony/console": "^4.2",
        "symfony/http-foundation": "^4.2",
        "symfony/process": "^4.2",
        "symfony/routing": "^4.2",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "filp/whoops": "^2.3",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^4.2"
    },
    "scripts": {
        "sniff": "phpcs --standard=PSR2 ./app ./config ./framework",
        "fix-cs": "phpcbf --standard=PSR2 ./app ./config ./framework"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
